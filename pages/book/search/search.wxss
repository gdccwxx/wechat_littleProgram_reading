.container {
  width: 94%;
  margin: 0 auto;
}
.search {
    background-color: #f3f5f5;
    height: 60rpx;
    width: 100%;
    margin-top: 15rpx;
    margin-bottom: 15rpx;
    display: flex;
    flex-direction: row;
}
.iconImg{
    margin: auto 0 auto 20rpx;
}
.placeholder {
    font-size: 14px;
    color: d1d1d1;
    margin-left: 20rpx;
}
.search input {
    height: 100%;
    width: 600rpx;
    margin-left: 25rpx;
    font-size: 28rpx;
}
.sureSearch {
  width: 90rpx;
  height: 60rpx;
  background-color: #ffffff;
  font-size: 32rpx;
  padding: 8rpx 0 0  15rpx;
  color: #b8baba;
}
.moreHistory {
  width: 100%;
  height: 90rpx;
  text-align: center;
  line-height: 90rpx;
  border-bottom: 18rpx solid #f3f5f5;
}
.moreHistory:active{
  background-color: #f0f0f0;
}
.container .title{
  margin-top: 34rpx;
  width: 100%;
  height: 50rpx;
}
.hotSearchImage {
  width: 29rpx;
  height:38rpx;
  padding-top: 7rpx;
  margin-right: 15rpx;
  float: left;
}
.hotSearchTitle{
  float: left;
}
.searchHistoryChild {
  width: 99%;
  height: 90rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  background-color: #ffffff;
  border-bottom: 2rpx solid #f3f5f5;
  line-height: 90rpx;
  font-size: 16px;
}
.searchHistoryText{
  margin-top: 50rpx;
  vertical-align: middle;
  color: #051414;
}
.searchHistoryChild .clock{
  width:28rpx;
  height: 28rpx;
  margin-right: 15rpx;
  vertical-align: middle;
}
.searchHistoryChild .cancel {
  width: 25rpx;
  height: 25rpx;
  margin-top: 40rpx;
}
.hotSearchContainer{
  width: 100%;
  height: 50rpx;
}
.hotSearchChild{
  padding: 5rpx 10rpx;
  text-align: center;
  border: 1rpx solid #000000;
  border-radius: 10rpx;
}
.hotSearchChildContainer {
  margin-top: 25rpx;
  margin-right: 25rpx;
  display: inline-block;
}
.cancelContainer{
  height: 90rpx;
  padding-left: 30rpx;
}
.resultCount{
  color: #051414;
  font-size: 25rpx;
}
.searchResultChild{
  width: 100%;
  height: 248rpx;
  border-bottom: 2rpx solid #eef5f5;
  display: flex;
  flex-direction: row;
}
.bookCoverImage{
  width: 155rpx;
  height: 215rpx;
  margin-top: 18rpx;
  margin-right: 30rpx;
}
.resultInfo{
  margin-top: 18rpx;
}
.resultInfo text{
  display: block;
}
.Infos {
  font-size: 24rpx;
  color: #b8baba;
  margin-top: 10rpx;
}
.InfoName{
  font-size: 30rpx;
}
.InfoHave{
  font-size: 25rpx;
  color: #2fcdcc;
  margin-top: 20rpx;
}
.historyChild{
  width: 90%;
  height: 100%;
  overflow: hidden;
}
page{
  background-color: #ffffff;
}