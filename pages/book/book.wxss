@import "/pages/template/bookListTemplate/bookListTemplate.wxss";
.container{
  width: 100%;
  height: 560rpx;
  background-color: #f3f5f5;
}
.topInner {
  width: 94%;
  height: 100%;
  padding-top: 0rpx;
  margin: 0 auto;
}
swiper {
  width: 100%;
  height: 450rpx;
  /*margin-top: 5rpx;*/
}
swiper-item image {
  width: 100%;
  height: 100%;
}
.search {
    background-color: #fefefe;
    height: 60rpx;
    width: 100%;
    margin-top: 15rpx;
    margin-bottom: 15rpx;
    display: flex;
    flex-direction: row;
}
.iconImg{
    margin: auto 0 auto 20rpx;
}
.placeholder {
    font-size: 14px;
    color: d1d1d1;
    margin-left: 20rpx;
}
.search input {
    height: 100%;
    width: 600rpx;
    margin-left: 25rpx;
    font-size: 28rpx;
}
.scanCodeContainer {
  width: 60rpx;
  height: 60rpx;
}
.scanCodeContainer:active{
  background: #f0f0f0;
}
.scanCode {
    height: 29rpx;
    width: 33rpx;
    margin: 17rpx 30rpx auto 10rpx;
}
.bookTemplate {
  margin-bottom: 15rpx;
}
page{
