.sortContainer {
  width: 100%;
}

.tabSort {
  width: 93%;
  height: 240rpx;
  margin: 0 auto;
  padding-top: 15rpx;
}

.tabBlock {
  width: 33.3%;
  float: left;
  height: 200rpx;
  margin-bottom: 20rpx;
  border-radius: 8rpx;
}
.tabBlockContainer{
  width: 200rpx;
  height: 200rpx;
  display: block;
  margin: 0 auto;
  position: relative;
  border-radius: 8rpx;
  overflow: hidden;
}
.tabBlock image{
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}
.overlay {
  position: absolute;
  left: 0;
  top: 0;
  z-index: 999;
  width: 200rpx;
  height: 200rpx;
  display: block;
  margin: 0 auto;
  background: #000000;
  opacity: 0.4;
  border-radius: 8rpx;
  transition: 0.3s all;
}
.overlayUp{
  position: absolute;
  left: 0;
  top: 0;
  width: 200rpx;
  height: 200rpx;
  display: block;
  margin: 0 auto;
  background: #000000;
  opacity: 0;
  border-radius: 8rpx;
  transition: 0.3s all;
}
.selecteText{
  position: absolute;
  left: 60rpx;
  top: 140rpx;
  color: #ffffff;
  opacity: 1;
  z-index: 99999;
  letter-spacing: 10rpx;
  font-size: 18px;
  transition: 0.0.5s all;
}
.sortTitle{
  display: block;
  margin-left: 5%;
  font-size: 18px;
  padding-top: 15rpx;
  letter-spacing: 10rpx;
  color: #2fcdcc;
}
.sortClass{
  width: 100%;
  display: flex;
  flex-wrap:wrap;
  margin-top: 20rpx;
}
.classes{
  border-top: 1rpx solid #f5f5f5;
  border-bottom: 1rpx solid #f5f5f5;
  height: 110rpx;
  flex: 0 0 32.9%;
  color: #383838;
}
.classes:not(:nth-child(3n-2)){
  border-left: 1rpx  solid #f5f5f5;
}
.classes:not(:nth-child(3n)){
  border-right: 1rpx solid #f5f5f5;  
}
.classes text { 
  display: block;
  text-align: center;
}
.classes text:nth-child(1){
  margin-top: 13rpx;
  font-size: 34rpx;
}
.classes text:nth-child(2){
  color: #c7c7c7;
  font-size: 24rpx;
  margin-top: -6rpx;
}